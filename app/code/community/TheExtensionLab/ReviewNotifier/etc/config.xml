<?xml version="1.0"?>
<config>
    <modules>
        <TheExtensionLab_ReviewNotifier>
            <version>0.1.0</version>
        </TheExtensionLab_ReviewNotifier>
    </modules>

    <global>
        <models>
            <theextensionlab_reviewnotifier>
                <class>TheExtensionLab_ReviewNotifier_Model</class>
            </theextensionlab_reviewnotifier>
        </models>

        <events>
            <review_save_after>
                <observers>
                    <theextensionlab_reviewnotifier>
                        <class>theextensionlab_reviewnotifier/observer</class>
                        <method>reviewSaveAfter</method>
                    </theextensionlab_reviewnotifier>
                </observers>
            </review_save_after>
        </events>
    </global>

    <phpunit>
        <suite>
            <modules>
                <TheExtensionLab_ReviewNotifier />
            </modules>
        </suite>
    </phpunit>

</config>